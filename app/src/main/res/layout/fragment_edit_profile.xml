<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">
    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="49dp" />

    <EditText
        android:id="@+id/et_url_profile"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Select photo to add in your profile"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp" />

    <ImageButton
        android:id="@+id/imgbtn_url_profile"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:background="@color/colorAccount"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="149dp" />

    <ImageButton
        android:id="@+id/imgbtn_edit_name"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:background="@color/colorAccount"
        android:src="@drawable/ic_edit"
        tools:layout_editor_absoluteX="351dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/et_edit_name"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Edit your name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/et_edit_tag"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="TAg or Your Skill"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="313dp" />

    <ImageButton
        android:id="@+id/imgbtn_edit_tag"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:background="@color/colorAccount"
        android:src="@drawable/ic_edit"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="313dp" />

    <EditText
        android:id="@+id/et_edit_info"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Info"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="403dp" />

    <ImageButton
        android:id="@+id/imgbtn_edi_info"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:background="@color/colorAccount"
        android:src="@drawable/ic_edit"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="403dp" />


</androidx.constraintlayout.widget.ConstraintLayout>